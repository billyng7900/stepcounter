<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name : "
        android:ems="10"
        android:id="@+id/tv_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_age"
        android:layout_below="@+id/tv_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Age : " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_gender"
        android:layout_below="@+id/tv_age"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tv_age"
        android:text="Gender : " />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_height"
        android:layout_below="@+id/tv_gender"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tv_gender"
        android:text="Height :" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_weight"
        android:layout_below="@+id/tv_height"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/tv_height"
        android:text="Weight : " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/tv_edit"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/tv_weight"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/male"
        android:checked="false"
        android:layout_below="@+id/tv_age"
        android:layout_alignEnd="@+id/tv_edit"
        android:layout_marginEnd="55dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/female"
        android:layout_below="@+id/tv_age"
        android:layout_alignEnd="@+id/tv_age"
        android:layout_marginEnd="37dp"
        android:checked="false" />
</RelativeLayout>
